<Page x:Class="lfin.pages.AddTransaction"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lfin.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Transaction_categoriesList" Height="450" Width="800">

    <Grid Background="Pink">
        <Label Margin="30,10,680,415" Content="Имя Счета"/>

        <TextBox x:Name="AccountBox" Margin="132,10,468,415" Width="200" Height="25"/>

        <Label Margin="30,50,680,375" Content="Сумма"/>

        <TextBox x:Name="AmountBox" Margin="132,50,468,375" Width="200" Height="25"/>

        <Label Margin="30,90,680,335" Content="Дата"/>

        <Label Margin="30,130,680,295" Content="Описание"/>

        <TextBox x:Name="DescriptionBox" Margin="132,130,468,295" Width="200" Height="25"/>

        <Label Margin="30,170,680,255" Content="Категории"/>

        <TextBox x:Name="CategoriesBox" Margin="132,170,468,255" Width="200" Height="25"/>

        <Button Margin="30,225,468,170" Content="Новая транзакция" Click="Button_Click"/>
        <DatePicker x:Name="DateBox" HorizontalAlignment="Left" Margin="132,90,0,0" VerticalAlignment="Top" Height="25" Width="200"/>
    </Grid>
</Page>
